
@{
    ViewBag.Title = "Index";
}

<div>
    <div class="container">
        <h2>Welkom!</h2>
        <div class="kader col-md-3">
            <h2>Items</h2>
            <p>Klik op 
                @Html.ActionLink("Items", "ItemsView", "Item")
             om de lijst van beschikbare boeken, spellen, cd´s en dvd´s te bekijken.
            </p>
        </div>
        <div class="col-md-1"></div>
        <div class="kader col-md-3">
            <h2>Leerlingen</h2>
            <p>Klik op 
            @Html.ActionLink("Leerlingen", "Leerlingenview", "Leerling") 
            om de lijst van leerlingen te bekijken.
            </p>
        </div>
        <div class="col-md-1"></div>
        <div class="kader col-md-3">
            <h2>Uitleningen</h2>
            <p>Klik op 
            @Html.ActionLink("Uitleningen", "UitleningenView", "Uitlening")
            om de lijst van lopende uitleningen te bekijken en beheren.
            </p>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>


